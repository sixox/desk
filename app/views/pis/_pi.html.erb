<div class="card mb-5" id="pi_item_<%= pi.id %>">
	<div class="card-body">
		<div class="d-flex justify-content-between align-items-center">
			<h5 class="card-title text-center mb-0">Purchase Invoice (PI)</h5>
			<% if user_signed_in? && current_user.trading? %>

			<span><%= link_to edit_project_pi_path(project, pi), data: { controller: "bs-modal-form" } do %>
				<i class="bi bi-pencil-fill"></i>
				<% end %></span>
			<% end %>

			</div>			
			<div class="row mt-3">
				<table class="table table-success table-striped">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">PI number</th>
							<th scope="col">Project</th>
							<th scope="col">Destination</th>
							<th scope="col">Buyer</th>
							<th scope="col">Product</th>
							<th scope="col">Packing</th>
							<th scope="col">Quantity</th>
							<th scope="col">Unit Price</th>
							<th scope="col">Total Price</th>
							<th scope="col">Term</th>


						</tr>
					</thead>
					<tbody>
						<tr>
							<th scope="row">-></th>
							<td><%= pi.number %></td>
							<td><%= project.number %></td>
							<td><%= pi.pod %></td>
							<td><%= pi.customer.nickname %></td>
							<td><%= pi.product %></td>
							<td><%= pi.packing_type %></td>
							<td><%= pi.quantity.to_i %> MT</td>
							<td><%= pi.unit_price.to_i %></td>
							<td><%= pi.total_price.to_i %></td>
							<td><%= pi.payment_term %></td>
						</tr>

					</tbody>
				</table>
			</div>
			<div class="accordion" id="accordionExample">

				<div class="accordion-item">
					<h2 class="accordion-header" id="headingThree">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
							More Details
						</button>
					</h2>
					<div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
						<div class="accordion-body">
							<table class="table table-success table-striped">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Validity</th>
										<th scope="col">Bank Account</th>
										<th scope="col">Packing count</th>
										<th scope="col">Shipment rate</th>
										<th scope="col">Seller</th>
										<th scope="col">Delivery Time</th>
										<th scope="col">POL</th>



									</tr>
								</thead>
								<tbody>
									<tr>
										<th scope="row">-></th>
										<td><%= pi.validity %></td>
										<td><%= pi.bank_account %></td>
										<td><%= pi.packing_count %></td>
										<td><%= pi.shipment_rate.to_i %></td>
										<td><%= pi.seller %></td>
										<td><%= pi.delivery_time %></td>
										<td><%= pi.pol %></td>

									</tr>

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>

	</div>





