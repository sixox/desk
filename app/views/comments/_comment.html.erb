<li class="shadow-lg mb-2 bg-body rounded list-group-item" id="comment_item_<%= comment.id %>">
	<div class="row">
		
		<div class="col-lg-6">
			<div class="d-flex justify-content-start">
				<small class="text-secondary"><%= comment.user.name%>:</small>
			</div>
		</div>
		
		<div class="col-lg-6">
			<div class="d-flex justify-content-end">
				<p>
					<%= comment.created_at.strftime('%A %d %B')  %>
				</p>
			</div>
		</div>
	</div>
	<div class="row">
		<small>
			<%= comment.body %>
		</small>
	</div>
	<% if comment.files.attached? %>
	<div class="row mt-2">
		<div class="mt-2">
			<ul>
				<% comment.files.each do |file| %>
				<li>
					<%= link_to file.filename, rails_blob_path(file, disposition: 'attachment') %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
	<% end %>
	

</li>























