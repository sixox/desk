<!-- app/views/experiences/_form.html.erb -->
<%= form_with model: @experience, local: true do |f| %>
  <div class="modal-body">
    <div class="row">
      <% if @experience.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @experience.errors.full_messages.each do |m| %><li><%= m %></li><% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-lg-12">
        <div class="form-group mt-3">
          <label class="form-label">Subject <span class="text-danger">*</span></label>
          <%= f.text_field :subject, class: "form-control" %>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="form-group mt-3">
          <label class="form-label">Body <span class="text-danger">*</span></label>
          <%= f.rich_text_area :body, class: "form-control" %>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="form-group mt-3">
          <label class="form-label">Images (PNG/JPG/WEBP/GIF, â‰¤5MB each, up to 10)</label>
          <%= f.file_field :images, multiple: true, direct_upload: true,
                accept: "image/png,image/jpeg,image/jpg,image/webp,image/gif",
                class: "form-control" %>
        </div>
      </div>

      <div class="col-lg-12">
        <div class="form-group mt-3">
          <label class="form-label">Files (any type)</label>
          <%= f.file_field :files, multiple: true, direct_upload: true, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <%= f.submit(@experience.new_record? ? "Create Experience" : "Update Experience",
                 class: "btn btn-primary", data: { action: "click->bs-modal#submitEnd" }) %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
