<div class="col-lg-10 mx-auto mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">All Balances (sorted by SPI)</h4>
    <%= link_to "Back", ballances_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th style="width:60px;">#</th>
              <th>Balance Number</th>
              <th>SPI Number</th>
            </tr>
          </thead>
          <tbody>
            <% @ballances.each_with_index do |balance, idx| %>
              <tr>
                <td><%= idx + 1 %></td>
                <td>
                  <%= link_to(balance.number.presence || "Balance ##{balance.id}",
                              ballance_path(balance),
                              class: "text-decoration-none fw-semibold text-primary") %>
                </td>
                <td>
                  <%= balance.spi&.number.presence || "-" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<hr><hr>
<div class="col-lg-10 mx-auto mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">SPI-only Payment Orders</h4>
    <%= link_to "Back", request.referer || root_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>

  <% if @spi_only_payments.blank? %>
    <div class="alert alert-info">No payment orders linked to an SPI without a Ballance.</div>
  <% else %>
    <div class="card">
      <div class="card-body p-0">
        <table class="table table-striped mb-0">
          <thead class="table-light">
            <tr>
              <th>Payment ID</th>
              <th>SPI # </th>
              <th>inventory number </th>
              <th>Project</th>
              <th>Amount</th>
              <th>Currency</th>
              <th>Status</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @spi_only_payments.each do |po| %>
              <tr>
                <td><%= link_to po.id, payment_order_path(po), class: "link-nodecor-po" %></td>
                <td><%= po.spi&.number || "—" %><%= po.spi&.ballance.number %></td>
                <td><%= po.spi&.ballance.number %></td>
                <td>
                  <% if po.project %>
                    <%= link_to po.project.number, project_path(po.project), class: "text-decoration-none" %>
                  <% else %>
                    —
                  <% end %>
                </td>
                <td class="fw-bold"><%= number_with_precision(po.amount.to_i, precision: 0, delimiter: ",") %></td>
                <td><small><%= po.currency %></small></td>
                <td><%= po.status %></td>
                <td><small><%= (po.cob_confirmed_at || po.created_at).try(:strftime, "%Y-%m-%d") %></small></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%# If you enabled pagination in the controller: %>
    <%# <div class="mt-3"><%= paginate @spi_only_payments %></div> %>
  <% end %>
</div>

