<div class="col-lg-10 mx-auto mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">All Balances (sorted by SPI)</h4>
    <%= link_to "Back", ballances_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0 align-middle">
          <thead class="table-light">
            <tr>
              <th style="width:60px;">#</th>
              <th>Balance Number</th>
              <th>SPI Number</th>
            </tr>
          </thead>
          <tbody>
            <% @ballances.each_with_index do |balance, idx| %>
              <tr>
                <td><%= idx + 1 %></td>
                <td>
                  <%= link_to(balance.number.presence || "Balance ##{balance.id}",
                              ballance_path(balance),
                              class: "text-decoration-none fw-semibold text-primary") %>
                </td>
                <td>
                  <%= balance.spi&.number.presence || "-" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
