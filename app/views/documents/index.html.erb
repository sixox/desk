<div class="col-lg-10 mx-auto mt-5">
  <div class="card mb-5">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <div class="d-flex justify-content-start">
            <h3>Documents</h3>
          </div>

        </div>
        <% if current_user.hr? %>
        
        <div class="col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to new_document_path, data: { controller: "bs-modal-form" }, class: "btn btn-success" do %>
            <i class="bi bi-plus"></i> New Document
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <ul class="list-group mt-5 mb-5" id="customer_items">
        <% @documents.each do |document| %>
          <%= link_to document_path(document), class: "text-decoration-none" do %>
            <%= render 'documents/document', document: document %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>