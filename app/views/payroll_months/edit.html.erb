<div class="col-lg-10 mx-auto mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">
      Payroll Month
      <span class="text-muted">(<%= @month.start_on %> â†’ <%= @month.end_on %>)</span>
    </h4>
    <%= link_to "Back", payroll_months_path, class: "btn btn-sm btn-outline-secondary" %>
  </div>

  <div class="card">
    <div class="card-body">
      <%= form_with model: @month, local: true do |f| %>
        <div class="table-responsive">
          <table class="table table-striped align-middle">
            <thead>
              <tr>
                <th>Date</th>
                <th>Day</th>
                <th class="text-center">Holiday?</th>
                <th>Note</th>
              </tr>
            </thead>
            <tbody>
              <% @days.each do |d| %>
                <%= f.fields_for :payroll_days, d do |df| %>
                  <tr>
                    <td><%= d.day_on %></td>
                    <td><%= d.day_on.strftime("%A") %></td>
                    <td class="text-center">
                      <%= df.check_box :holiday, class: "form-check-input" %>
                    </td>
                    <td>
                      <%= df.text_field :note, class: "form-control form-control-sm", placeholder: "Holiday reason..." %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="mt-3">
          <%= f.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
