<div class="col-lg-8 mx-auto mt-4">
  <h4 class="mb-3">Create Payroll Month</h4>

  <div class="card">
    <div class="card-body">
      <%= form_with model: @month, local: true do |f| %>

        <% if @month.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @month.errors.full_messages.each do |m| %>
                <li><%= m %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row g-3">
          <div class="col-md-4">
            <%= f.label :title, "Title (optional)", class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "1404-10" %>
          </div>

          <div class="col-md-4">
            <%= f.label :start_on, "Start date", class: "form-label" %>
            <%= f.date_field :start_on, class: "form-control" %>
          </div>

          <div class="col-md-4">
            <%= f.label :end_on, "End date", class: "form-label" %>
            <%= f.date_field :end_on, class: "form-control" %>
          </div>

          <div class="col-md-4">
            <%= f.label :days_count, "Days count", class: "form-label" %>
            <%= f.number_field :days_count, class: "form-control", min: 1 %>
          </div>
        </div>

        <div class="mt-3">
          <%= f.submit "Create", class: "btn btn-primary" %>
          <%= link_to "Back", payroll_months_path, class: "btn btn-outline-secondary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
