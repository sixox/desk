<!-- app/views/candidate_portal/sessions/new.html.erb -->
<div class="col-lg-5 mx-auto mt-5">
  <div class="card shadow">
    <div class="card-body" dir="rtl">
      <h4 class="mb-3 text-end">ورود متقاضی</h4>
      <%= form_with url: candidate_portal_login_path, method: :post, local: true do |f| %>
        <div class="mb-3 text-end">
          <label class="form-label">شماره موبایل</label>
          <input type="tel" name="phone" class="form-control text-end" required>
        </div>
        <div class="mb-3 text-end">
          <label class="form-label">رمز عبور</label>
          <input type="password" name="password" class="form-control text-end" required>
        </div>
        <div class="d-flex justify-content-between">
          <%= link_to "بازگشت", root_path, class: "btn btn-outline-secondary" %>
          <button class="btn btn-primary">ورود</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
