<li class="list-group-item" id="vacation_item_<%= vacation.id %>">
	<% if current_user.is_manager %>

	<div class="row">
		<div class="col-lg-5">
			Requested By: <span class="text-info"><%= vacation.user.username %></span> 
		</div>
		<div class="col-lg-7">
			Requested At: <span class="text-info"><%= vacation.updated_at.strftime('%A %d %B') %></span> 

		</div>
	</div>
	<br>
	<% end %>
	<div class="row">
		<div class="col-lg-5">
			<div class="d-flex justify-content-start">
				<p class="fw-bold"><span class="text-primary"> <%= vacation.days %></span> days</p>
			</div>
		</div>
		<div class="col-lg-3">
			<% if vacation.confirm %>
			<p class="text-success">Confirmed</p>
			<% else %>
			<p class="text-warning">Not Confirmed Yet</p>
			<% end %>
		</div>

		<div class="col-lg-2">
			<% if user_signed_in? && @user == current_user %>
			<div class="d-flex justify-content-end">
				<%= link_to edit_vacation_path(vacation), data: { controller: "bs-modal-form" } do %>
				<i class="bi bi-pencil-fill"></i>
				<% end %>
				<%= link_to vacation_path(vacation), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this vacation request, this action can not be undo!' } do %>
				<i class="bi bi-trash text-danger"></i>
				<% end %>	
				<% if user_signed_in? && current_user == @user && @user.is_manager && !@user.hr? %>

				<%= link_to confirm_vacation_path(vacation), data: { turbo_method: :patch, turbo_confirm: 'Are you sure you want to Confirm this vacation request, this action can not be undo!' } do %>
				<i class="bi bi-check"></i>
				<% end %>
				<% end %>

			</div>
			<% end %>
		</div>
	</div>

	<small><span class="text-secondary"><%= vacation.start_at.strftime('%A %d %B') %></span> to <span class="text-secondary"><%= vacation.end_at.strftime('%A %d %B') %></span> </small><br>
	<small class="text-info"><%= vacation.vacation_type %></small><br>
</li>