<%= form_with model: @remote_day, data: { turbo: false } do |form| %>

  <div class="modal-body">
    <% if @remote_day.errors.any? %>
      <div class="error-area" style="color:red;">
        <h3><%= pluralize(@remote_day.errors.count, 'error') %> prohibited your remote day from being saved.</h3>
        <ul>
          <% @remote_day.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="mb-2 mt-3">Date <span class="text-danger">*</span></label>
      <%= form.date_field :date, class: 'form-control' %>
    </div>

    <div class="form-group mb-2 mt-3">
      <%= form.check_box :confirmed, class: 'form-check-input' %>
      <label class="form-check-label" for="remote_day_confirmed">Confirmed?</label>
    </div>

    <div class="form-group">
      <label class="mb-2 mt-3">Text</label>
      <%= form.text_area :text, class: 'form-control', rows: 5 %>
    </div>
  </div>

  <div class="modal-footer">
    <%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
