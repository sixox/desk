<div class="col-lg-10 mx-auto mt-5">

<% if @all_payments_done %>
  <p>All payments are done for this project.</p>

  <% @advance_payments.each do |payment|%>
    <%= payment.amount %>
  <% end %>

  <% @balance_payments.each do |payment|%>
