<div class="col-lg-10 mx-auto mt-5">

<% if @all_payments_done %>
  <p>All payments are done for this project.</p>


  <h2>Advance Payments</h2>
<table class="table">
  <thead>
    <tr>
            <th>ID</th>

      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @advance_payments.each do |payment| %>
      <tr>
        <td><%= payment[:id] %></td>
        <td><%= payment[:amount] %></td>
        <td><%= payment[:date].strftime("%Y-%m-%d") if payment[:date] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Balance Payments</h2>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @balance_payments.each do |payment| %>
      <tr>
        <td><%= payment[:id] %></td>
        <td><%= payment[:amount] %></td>
        <td><%= payment[:date].strftime("%Y-%m-%d") if payment[:date] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2> Payments</h2>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment[:id] %></td>
        <td><%= payment[:amount] %></td>
        <td><%= payment[:date].strftime("%Y-%m-%d") if payment[:date] %></td>
