<%= form_with model: [@project, @booking, @release_request], local: true do |f| %>
  <div class="modal-body">
    <div class="row">
      <!-- Display Errors -->
      <% if @release_request.errors.any? %>
        <div class="error-area text-danger mb-3">
          <h5><%= pluralize(@release_request.errors.count, 'error') %> prohibited this release request from being saved:</h5>
          <ul>
            <% @release_request.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Form Header -->
      <div class="row mb-3">
        <div class="col-lg-6">
          <h3>Release Request</h3>
        </div>
        <div class="col-lg-6 d-flex justify-content-end">
          <h6>Project: <%= @project.number %></h6>
          <h6>Booking: <%= @booking.number %></h6>
        </div>
      </div>

      <!-- Note -->
      <div class="col-lg-12 mb-3">
        <div class="form-group">
          <label class="form-label fw-bold">
            Note
            <small class="text-muted">(Optional)</small>
          </label>
          <%= f.text_area :note, class: 'form-control', rows: 5, placeholder: 'Enter additional information or notes here...' %>
        </div>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <!-- Submit Button -->
    <%= f.submit 'Save Release Request', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
    <!-- Close Button -->
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
