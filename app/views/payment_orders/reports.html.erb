			<h6 class="text-muted mt-1">Rial</h6>
			<div>
				<%= render 'payment_orders/report', payment_orders: @not_paid_rial, sum: @sum_not_paid_rial %>

			</div>
		</div>
		<div class="col-lg shadow-lg mb-2 m-1 bg-body rounded">
			<h6 class="text-muted mt-1">Dollar</h6>
			<div>
				<%= render 'payment_orders/report', payment_orders: @not_paid_dollar, sum: @sum_not_paid_rial %>

			</div>
		</div>
		
	</div>
	<div class="row shadow-lg mb-2 bg-body rounded">
		<div class="col-lg shadow-lg mb-2 m-1 bg-body rounded">
			<h6 class="text-muted mt-1">Dirham</h6>
			<div>
				<%= render 'payment_orders/report', payment_orders: @not_paid_dirham, sum: @sum_not_paid_rial %>

			</div>
		</div>
		<div class="col-lg shadow-lg mb-2 m-1 bg-body rounded">
			<h6 class="text-danger mt-1">Summery</h6>
