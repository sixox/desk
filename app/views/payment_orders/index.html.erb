<div class="col-lg-10 mx-auto mt-5">



	<div class="card mb-5">
		<div class="card-body">
			<div class="row">
				<div class="col-lg-6">
					<div class="d-flex justify-content-start">
						<h3>Payment Orders</h3>
					</div>

				</div>
				
				<div class="col-lg-6">

					<div class="d-flex justify-content-end">

						<%= link_to new_payment_order_path, data: { controller: "bs-modal-form" }, class: "btn btn-success" do %>
						<i class="bi bi-plus"></i> Create Payment order
						<% end %>
						<div class="btn-group ms-1">
							<button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Filters
							</button>
							<ul class="dropdown-menu">
								<li><%= link_to 'Not Confirmed', not_confirmed_payment_orders_path, class: 'dropdown-item' %></li>
								<li><%= link_to 'Not Paid', not_paid_payment_orders_path, class: 'dropdown-item' %></li>
								<li><%= link_to 'Not Delivered', not_delivered_payment_orders_path, class: 'dropdown-item' %></li>
								<li><%= link_to 'Pending', pending_payment_orders_path, class: 'dropdown-item' %></li>
								<li><%= link_to 'Finished', finished_payment_orders_path, class: 'dropdown-item' %></li>
								
							</ul>
						</div>
					</div>
				</div>
			</div>
			<ul class="list-group" id="payment_order_items">
				<% @payment_orders.each do |payment_order| %>
				<%= render 'payment_orders/payment_order', payment_order: payment_order %>
				<% end %>
			</ul>
		</div>
	</div>



</div>




