<%= form_with model: @deposit do |form| %>
<div class="modal-body">
	<div class="row">
		<% if @deposit.errors.any? %>
		<div class="error-area" style="color:red;">
			<h3><%= pluralize(@deposit.errors.count, 'error') %> prohibited your Deposit from being saved.</h3>
			<ul>
				<% @deposit.errors.each do |error|%>
				<li>
					<%= error.full_message%>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<div class="col-lg-6">
				<div class="d-flex justify-content-start">
					<h3>Deposit</h3>
				</div>
			</div>
			
		</div>
		<div class="row mt-2">
			<div class="col-lg-8">
				<div class="form-group mt-3">
					<label for="amount" class="form-label">
						Deposite to
						<span class="text-danger">*</span>
					</label>
					
					<%= form.collection_select :bank_id, @banks, :id, :name, { prompt: 'Select Bank'}, { class: "form-select" } %>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="form-group mt-3">
					<label for="amount" class="form-label">
						Amount
						<span class="text-danger">*</span>
					</label>
					<%= form.number_field :amount, class: "form-control" %>
				</div>
			</div>
		</div>
		<div class="row mt-2">
			<div class="col-lg-12">
				<div class="form-group">
					<label class="mb-2 mt-3">
						Deatils
						<span class="text-danger">*</span>
					</label>
					<%= form.text_area :details, class: 'form-control', rows: 5 %>
				</div>
			</div>
			<div class="col-lg">
				<div class="form-group">
						<label class="mb-2 mt-2">
							Document
							<span class="text-danger">*</span>
							<%= form.file_field :document, class: "form-control custom-file-input mt-2" %>
						</label>
					</div>
			</div>
		</div>




		
	</div>
</div>
<div class="modal-footer">
	<%= form.submit 'Save Changes', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
<% end %>

