<%= form_for [@project, @booking] do |form| %>
<div class="modal-body">
	<div class="row">
		<% if @booking.errors.any? %>
		<div class="error-area" style="color:red;">
			<h3><%= pluralize(@booking.errors.count, 'error') %> prohibited your booking from being saved.</h3>
			<ul>
				<% @booking.errors.each do |error|%>
				<li>
					<%= error.full_message%>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<div class="col-lg-6">
				<div class="d-flex justify-content-start">
					<h4>Booking</h4>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="d-flex justify-content-end">
					<% if @project.pi %>
					<small class="text-secondary">Project: <%= @project.number %></small><br>
					<small class="text-secondary">PI number: <%= @project.pi.number %></small>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-lg-12">
			<div class="row bg-semi">
				<div class="col-lg-7">
					<div class="form-group">
						<label class="mb-2 mt-3">
							Booking number
							<span class="text-danger">*</span>
						</label>
					<div>
						<%= @booking.number %>
					</div>
					</div>
				</div>
				<div class="col-lg-5">
					<div class="form-group">
						<label class="mb-2 mt-3">
							Quantity
							<div>
							<%= @booking.quantity %>
							</div>
						</label>
					</div>
					
				</div>
			</div>





			<div class="row bg-semi">
				<div class="col-lg">
					<div class="form-group">
						<label class="mb-2 mt-1">
							Picked up
							<%= form.number_field :picked_up, class: "form-control mt-2" %>
						</label>
					</div>
				</div>
				<div class="col-lg">
					<div class="form-group">
						<label class="mb-2 mt-1">
							Filled
							<%= form.number_field :filled, class: "form-control mt-2" %>
						</label>
					</div>
				</div>
				
				
			</div>




		</div>
	</div>
</div>
<div class="modal-footer">
	<%= form.submit 'pick up or fill container', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
<% end %>