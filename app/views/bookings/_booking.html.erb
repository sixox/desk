

<div class="row mt-3" id="booking_item_<%= booking.id %>">
	<table class="table table-success table-striped">
		<thead>
			<tr>
				<th scope="col">Booking number</th>
				<th scope="col">Line</th>
				<th scope="col">Forwarder</th>
				<th scope="col">Port</th>
				<th scope="col">flexi</th>
				<th scope="col">Picked up</th>
				<th scope="col">Filled</th>
				<th scope="col">Total</th>
				<th scope="col">Free time</th>
				<th scope="col">Status</th>
				<th scope="col">Action</th>


			</tr>
		</thead>
		<tbody>
			<tr>
				<th scope="row"><%= booking.number %></th>
				<td><%= booking.line %></td>
				<td><%= booking.forwarder %></td>
				<td><%= booking.pod %></td>
				<td><%= 'yes' if booking.have_flexi %></td>
				<td><%= booking.picked_up %></td>
				<td><%= booking.filled %></td>
				<td><%= booking.quantity %></td>

				<td><%= booking.free_time %></td>
				<td><%= booking.status %></td>


				<td><% if user_signed_in? && (current_user.sales? || current_user.logistics?) %>

					<span><%= link_to edit_project_booking_path(project, booking), data: { controller: "bs-modal-form" } do %>
						<i class="bi bi-pencil-fill"></i>
						<% end %></span>
						<span><%= link_to edit_picked_up_project_booking_path(project, booking), data: { controller: "bs-modal-form" } do %>
							<i class="bi bi-database-fill-up"></i>
							<% end %></span>
							<span>
								<%= link_to edit_status_project_booking_path(project, booking), data: { controller: "bs-modal-form" } do %>
								<i class="bi bi-clock-fill"></i>
								<% end %>
							</span>

							<% end %>
						</td>

					</tr>

				</tbody>
			</table>
		</div>
		<div class="accordion" id="accordionBooking<%= booking.id %>">

				<div class="accordion-item">
					<h2 class="accordion-header" id="headingBookingThree<%= booking.id %>">
						<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThreeBooking<%= booking.id %>" aria-expanded="false" aria-controls="collapseThreeBooking<%= booking.id %>">
							More Details
						</button>
					</h2>
					<div id="collapseThreeBooking<%= booking.id %>" class="accordion-collapse collapse" aria-labelledby="headingBookingThree<%= booking.id %>" data-bs-parent="#accordionBooking<%= booking.id %>">
						<div class="accordion-body">
							<table class="table table-success table-striped">
								<thead>
									<tr>
										<th scope="col">#</th>
										<th scope="col">Factory order</th>
										<th scope="col">Pick up date</th>
										<th scope="col">Stuffing</th>
										<th scope="col">Custom clearance</th>
										<th scope="col">Custom submission date</th>
										<th scope="col">Vessel ETD</th>



									</tr>
								</thead>
								<tbody>
									<tr>
										<th scope="row">-></th>
										<td><%= booking.factory_order_date ? booking.factory_order_date.strftime("%b-%d") : "" %></td>
										<td><%= booking.pick_up_date ? booking.pick_up_date.strftime("%b-%d") : "" %></td>
										<td><%= booking.stuffing ? "Started" : "Not Started" %></td>
										<td><%= booking.custom_clearance ? "Started" : "Not Started" %></td>
										<td><%= booking.custom_submission_date ? booking.custom_submission_date.strftime("%b-%d") : "" %></td>
										<td><%= booking.vessel_eta ? booking.vessel_eta.strftime("%b-%d") : "" %></td>

									</tr>

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>






