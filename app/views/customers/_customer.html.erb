<li class="list-group-item" id="customer_item_<%= customer.id %>">
	<% if current_user.is_manager && current_user.sales? %>

	<div class="row">
		<div class="col-lg-5">
			Full Name: <span class="text-info"><%= customer.name %></span> 
		</div>
		<div class="col-lg-7">
			Nick Name: <span class="text-info"><%= customer.nickname %></span> 

		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-5">
			<div class="d-flex justify-content-start">
				Company: <p class="fw-bold"><span class="text-primary"><%= customer.company %></span> </p>
			</div>
		</div>
		<div class="col-lg-3">
place holder
		</div>

		<div class="col-lg-2">
			<div class="d-flex justify-content-end">

				<%= link_to edit_customer_path(customer), data: { controller: "bs-modal-form" } do %>
				<i class="bi bi-pencil-fill"></i>
				<% end %>
				<%= link_to customer_path(customer), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this customer, this action can not be undo!' } do %>
				<i class="bi bi-trash text-danger"></i>
				<% end %>	

			</div>
			
		</div>
	</div>

	<small><span class="text-secondary">placeholder</span> to <span class="text-secondary">placeholder</span> </small><br>
	<small class="text-info">placeholder</small><br>
</li>
<% end %>
