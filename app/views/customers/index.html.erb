<div class="col-lg-10 mx-auto mt-5">
	<% if current_user.is_manager || current_user.sales? %>
	<div class="card mb-5">
		<div class="card-body">
			<div class="row">
				<div class="col-lg-6">
					<div class="d-flex justify-content-start">
						<h3>Customers</h3>
					</div>
				</div>
				<% if current_user.sales? %>
				<div class="col-lg-6">
					<div class="d-flex justify-content-end">
						<%= link_to new_customer_path, data: { controller: "bs-modal-form" }, class: "btn btn-success" do %>
						<i class="bi bi-plus"></i> New Customer
						<% end %>
					</div>
				</div>
				<% end %>
			</div>
			<ul class="list-group mt-5 mb-5" id="customer_items">
				<% @customers.each do |customer| %>
				  <%= link_to customer_path(customer), class: "text-decoration-none" do %>
						<%= render 'customers/customer', customer: customer %>
				  <% end %>
				<% end %>
			</ul>
		</div>
	</div>
	<% end %>
</div>