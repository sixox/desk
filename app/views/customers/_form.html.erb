<%= form_with model: @customer do |form| %>
<div class="modal-body">
	<div class="row">
		<% if @customer.errors.any? %>
		<div class="error-area" style="color:red;">
			<h3><%= pluralize(@customer.errors.count, 'error') %> prohibited your customer from being saved.</h3>
			<ul>
				<% @customer.errors.each do |error|%>
				<li>
					<%= error.full_message%>
				</li>
				<% end %>
			</ul>
		</div>
		<% end %>
		<div class="row">
			<div class="col-lg-6">
				<div class="d-flex justify-content-start">
					<h3>Customer</h3>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="d-flex justify-content-end">
					<% if @customer %>
					<h3 class="secondary"><%= @customer.id %></h3>
					<% end %>
				</div>
			</div>
		</div>

		<div class="col-lg-12">


			<div class="form-group">
				<label class="mb-2 mt-3">
					Full Name
					<span class="text-danger">*</span>
				</label>
				<%= form.text_field :name, class: 'form-control' %>
			</div>
			<div class="form-group mb-2 mt-3">
				<label class="mb-2 mt-3">
					Nick Name
					<span class="text-danger">*</span>
				</label>
				<%= form.text_field :nickname, class: 'form-control' %>
			</div>
						<div class="form-group mb-2 mt-3">
				<label class="mb-2 mt-3">
					Company
					<span class="text-danger">*</span>
				</label>
				<%= form.text_field :company, class: 'form-control' %>
			</div>










		</div>
	</div>
</div>
<div class="modal-footer">
	<%= form.submit 'Add Customer', class: 'btn btn-primary', data: { action: 'click->bs-modal#submitEnd' } %>
	<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
<% end %>