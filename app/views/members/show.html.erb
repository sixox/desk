<div class="col-lg-10 mx-auto mt-5">
	<div class="row">
		<div class="col-lg-4">

			<%= render 'profile_image_name', user: @user%>

			
			
			<div class="card mb-4 mb-lg-0">
				<div class="row m-2">
					<div class="col-lg">
						<div class="d-flex justify-content-start">
							<h4 class="text-secondary">Vacations</h4>
						</div>
					</div>
					<div class="col-lg">
						<div class="d-flex justify-content-end">
							<%= link_to vacations_path, class: "btn btn-secondary" do %>
							All Vacations
							<% end %>
						</div>
					</div>
					
				</div>
				<% if user_signed_in? && @user.vacations.present? %>
				<div class="card-body p-0">
					<ul class="list-group list-group-flush rounded-3" id="vacation_items">
						<% @user.vacations.order(created_at: :desc).limit(4)
						.each do |vacation| %>
						<%= render 'vacations/vacation', vacation: vacation %>
						<% end %>
					</ul>
				</div>
				<% end %>
			</div>
			

		</div>
		<div class="col-lg-8">
			<%= render 'profile_details', user: @user%>
			<%= render 'profile_payment_orders', user: @user%>



		</div>
	</div>
	<% if @fillers.any? %>
	<h3 class="mb-4 mt-3">Assessment Forms</h3>

	  <% @fillers.each do |filler| %>
	  <div class="card mt-4 mb-4 border-info">
	    <div class="card-header bg-info text-white">
	      <div class="col">
	        <div class="d-flex justify-content-start">
	          <h5 class="mb-0"><%= filler.name.titleize %></h5>
	        </div>
	      </div>
	    </div>
	  </div>
	  <div class="card mb-5 mt-2">
	    <div class="card-body">
	      <div class="accordion" id="accordionExample">

	        <% AssessmentForm.unique_users_for_filler(filler).each do |user| %>
	        <%= render 'assessments/assessments', user: user, filler: filler %>
	        <% end %>



	      </div>
	    </div>
	  </div>
	  <% end %>
	  <% end %>

</div>