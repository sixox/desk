<div class="col-lg-10 mx-auto mt-5">
	<%= render 'member_personal_details', user: @user%>
	<div class="card mb-5">
		<div class="card-body">
			<div class="row">
				<div class="col-lg-6">
					<div class="d-flex justify-content-start">
						<h3>About</h3>
					</div>
				</div>
				<% if user_signed_in? && @user == current_user %>
				<div class="col-lg-6">
					<div class="d-flex justify-content-end">
						<%= link_to edit_member_description_path, data: { controller: "bs-modal-form" } do %>
						<i class="bi bi-pencil-fill"></i>
						<% end %>
					</div>
				</div>
				<% end %>
			</div>
			<%= render 'member_description', user: @user %>
		</div>
	</div>

	<div class="card mb-5">
		<div class="card-body">
			<% if user_signed_in? && @user == current_user %>
			<div class="row">
				<div class="col-lg-6">
					<div class="d-flex justify-content-start">
						<h3>Vacations</h3>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="d-flex justify-content-end">
						<%= link_to new_vacation_path, data: { controller: "bs-modal-form" } do %>
						<i class="bi bi-plus"></i> Add Vacation
						<% end %>
					</div>
				</div>
			</div>

			<% if user_signed_in? && @user.vacations.present? %>
			<ul class="list-group" id="vacation_items">
				<% @user.vacations.reverse.each do |vacation| %>
				<%= render 'vacations/vacation', vacation: vacation %>
				<% end %>
				<% if @user.is_manager %>
				<hr>
				<h3>Department vacations</h3>
				<% @vacations_for_same_role.reverse.each do |vacation|%>
				<%= render 'vacations/vacation', vacation: vacation %>

				<% end %>

				<%end%>



			</ul>
			<% end %>
			<% end %>

		</div>
	</div>





</div>
